/* pages/indexOthers/indexOthers.wxss */
/* 文字 */
text{
  display: block;
  width: 100%;
  text-align: center;
  font-size: 35rpx;
  font-family: '宋体';
}
/* 一个帖子的容器 */
.tip{
  height: 150rpx;
  margin-top: 10rpx;
  border: 1rpx solid rebeccapurple;
  padding-top: 10rpx;
  background-color: rgba(70, 63, 63, 0.11);
}
/* 帖子的基本属性 */
.school, .credits{
  text-align: left;
  width: 50%;
  float: left;
}
.content{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-left: 18rpx;
}
.done, .reward{
  text-align: right;
  width: 50%;
  float: right;
}